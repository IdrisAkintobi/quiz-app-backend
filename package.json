{
  "name": "quiz-app-backend",
  "version": "1.0.0",
  "description": "backend api for a quiz application",
  "main": "index.js",
  "scripts": {
    "build": "yarn tsc",
    "start": "node dist/index.js",
    "start:dev": "nodemon src/index.ts",
    "lint": "yarn eslint --ignore-path .gitignore --ext .js,.ts",
    "format": "yarn prettier --ignore-path .gitignore \"**/*.{js,ts}\" --write",
    "test": "yarn jest"
  },
  "repository": "git+https://github.com/IdrisAkintobi/quiz-app-backend.git",
  "keywords": [
    "quiz",
    "api",
    "backend",
    "node",
    "express"
  ],
  "author": "iDris",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IdrisAkintobi/quiz-app-backend/issues"
  },
  "homepage": "https://github.com/IdrisAkintobi/quiz-app-backend#readme",
  "dependencies": {
    "argon2": "^0.28.7",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "express-jwt": "^7.7.5",
    "helmet": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.5.2",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-jwt": "^6.0.4",
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.21.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "mongodb-memory-server": "^8.8.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "private": true,
  "lint-staged": {
    "*..{js,ts}": "eslint --cache --fix",
    "*.{js,ts,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
